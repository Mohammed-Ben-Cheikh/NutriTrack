<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Dashboard' %> - NutriTrack</title>
    <link rel="stylesheet" href="/styles/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <aside
        id="sidebar"
        class="fixed inset-y-0 left-0 z-50 w-64 bg-white shadow-xl transform -translate-x-full transition-transform duration-300 ease-in-out lg:translate-x-0 lg:static lg:inset-0"
      >
        <div
          class="flex items-center justify-between h-16 px-6 border-b border-gray-200"
        >
          <h1 class="text-xl font-bold text-indigo-600">NutriTrack</h1>
          <button
            id="closeSidebar"
            class="lg:hidden text-gray-500 hover:text-gray-700"
          >
            <i class="fas fa-times text-xl"></i>
          </button>
        </div>

        <nav class="mt-6">
          <div class="px-4 space-y-2">
            <!-- Dashboard -->
            <a
              href="/dashboard"
              class="flex items-center px-4 py-3 text-sm font-medium <%= currentPage === 'dashboard' ? 'text-white bg-indigo-600' : 'text-gray-700 hover:bg-gray-100' %> rounded-lg group"
            >
              <i class="fas fa-tachometer-alt mr-3"></i>
              Dashboard
            </a>

            <!-- Nutrition -->
            <a
              href="/dashboard/recommendations"
              class="flex items-center px-4 py-3 text-sm font-medium <%= currentPage === 'recommendations' ? 'text-white bg-indigo-600' : 'text-gray-700 hover:bg-gray-100' %> rounded-lg group"
            >
              <i class="fas fa-lightbulb mr-3"></i>
              Recommandations
            </a>

            <!-- Repas -->
            <a
              href="/dashboard/repas"
              class="flex items-center px-4 py-3 text-sm font-medium <%= currentPage === 'repas' ? 'text-white bg-indigo-600' : 'text-gray-700 hover:bg-gray-100' %> rounded-lg group"
            >
              <i class="fas fa-utensils mr-3"></i>
              Mes Repas
            </a>

            <!-- Profil -->
            <a
              href="/dashboard/user"
              class="flex items-center px-4 py-3 text-sm font-medium <%= currentPage === 'profil' ? 'text-white bg-indigo-600' : 'text-gray-700 hover:bg-gray-100' %> rounded-lg group"
            >
              <i class="fas fa-user mr-3"></i>
              Profil
            </a>
          </div>

          <!-- Section paramètres -->
          <div class="mt-8 px-4">
            <h3
              class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider"
            >
              Paramètres
            </h3>
            <div class="mt-2 space-y-2">
              <a
                href="#"
                class="flex items-center px-4 py-3 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group"
              >
                <i class="fas fa-cog mr-3"></i>
                Configuration
              </a>

              <form action="/auth/logout" method="POST" class="px-0">
                <button
                  type="submit"
                  class="flex w-full items-center px-4 py-3 text-sm font-medium text-red-600 rounded-lg hover:bg-red-50 group"
                >
                  <i class="fas fa-sign-out-alt mr-3"></i>
                  Déconnexion
                </button>
              </form>
            </div>
          </div>
        </nav>
      </aside>

      <!-- Overlay pour mobile -->
      <div
        id="sidebarOverlay"
        class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden hidden"
      ></div>

      <!-- Contenu principal -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header mobile -->
        <header class="bg-white shadow-sm lg:hidden">
          <div class="flex items-center justify-between h-16 px-4">
            <button id="openSidebar" class="text-gray-500 hover:text-gray-700">
              <i class="fas fa-bars text-xl"></i>
            </button>
            <h1 class="text-lg font-semibold text-gray-900">
              <%= title || 'Dashboard' %>
            </h1>
            <div class="w-6"></div>
            <!-- Spacer -->
          </div>
        </header>

        <!-- Contenu principal -->
        <main class="flex-1 overflow-y-auto <%= contentClass || 'p-6' %>">
          <%- body %>
        </main>
      </div>
    </div>

    <script>
      // Gestion de la sidebar responsive
      const sidebar = document.getElementById("sidebar");
      const sidebarOverlay = document.getElementById("sidebarOverlay");
      const openSidebarBtn = document.getElementById("openSidebar");
      const closeSidebarBtn = document.getElementById("closeSidebar");

      // Ouvrir la sidebar
      openSidebarBtn?.addEventListener("click", () => {
        sidebar.classList.remove("-translate-x-full");
        sidebarOverlay.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      });

      // Fermer la sidebar
      const closeSidebar = () => {
        sidebar.classList.add("-translate-x-full");
        sidebarOverlay.classList.add("hidden");
        document.body.style.overflow = "auto";
      };

      closeSidebarBtn?.addEventListener("click", closeSidebar);
      sidebarOverlay?.addEventListener("click", closeSidebar);

      // Fermer la sidebar lors du redimensionnement de l'écran
      window.addEventListener("resize", () => {
        if (window.innerWidth >= 1024) {
          closeSidebar();
        }
      });

      // Animation des liens de navigation
      const navLinks = document.querySelectorAll("aside nav a");
      navLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          // Skip if it's the logout form or an active link
          if (
            e.currentTarget.closest("form") ||
            e.currentTarget.classList.contains("bg-indigo-600")
          ) {
            return;
          }

          // Retirer la classe active de tous les liens
          navLinks.forEach((l) => {
            if (!l.closest("form")) {
              l.classList.remove("bg-indigo-600", "text-white");
              l.classList.add("text-gray-700", "hover:bg-gray-100");
            }
          });

          // Ajouter la classe active au lien cliqué
          e.currentTarget.classList.remove(
            "text-gray-700",
            "hover:bg-gray-100"
          );
          e.currentTarget.classList.add("bg-indigo-600", "text-white");
        });
      });
    </script>
  </body>
</html>
